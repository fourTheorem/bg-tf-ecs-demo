{
  "name": "bg-tf-ecs-demo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.12.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "npm run --workspaces compile",
    "prelint": "npm exec --workspaces -- tsc --noEmit --skipLibCheck",
    "lint": "eslint --ext '.ts' --ext '.js' .",
    "test": "echo \"run some tests here...\"",
    "postinstall": "npm run compile",
    "terraform:fmt": "find terraform -type d -maxdepth 1 -exec terraform fmt -write=true \\{\\} \\;"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        200
      ]
    }
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.161.0",
    "@aws-sdk/client-codedeploy": "^3.161.0",
    "@aws-sdk/client-ecs": "^3.161.0",
    "@aws-sdk/client-sqs": "^3.161.0",
    "@aws-sdk/client-ssm": "^3.161.0",
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/aws-lambda": "^8.10.102",
    "@types/koa": "^2.13.5",
    "@types/koa-bunyan-logger": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-loader": "^8.2.5",
    "babel-plugin-add-import-extension": "^1.6.0",
    "bunyan": "^1.8.15",
    "delay": "^5.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "koa": "^2.13.4",
    "koa-bunyan-logger": "^2.1.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yargs": "^17.5.1"
  }
}
