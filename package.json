{
  "name": "bg-tf-ecs-demo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.12.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "npm run --workspaces compile",
    "prelint": "npm exec --workspaces -- tsc --noEmit --skipLibCheck",
    "lint": "eslint --ext '.ts' --ext '.js' .",
    "test": "echo \"run some tests here...\"",
    "postinstall": "npm run compile",
    "terraform:fmt": "find terraform -type d -maxdepth 1 -exec terraform fmt -write=true \\{\\} \\;"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        200
      ]
    }
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.223.0",
    "@aws-sdk/client-codedeploy": "^3.223.0",
    "@aws-sdk/client-dynamodb": "^3.223.0",
    "@aws-sdk/client-ecs": "^3.223.0",
    "@aws-sdk/client-ssm": "^3.223.0",
    "@aws-sdk/lib-dynamodb": "^3.223.0",
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/aws-lambda": "^8.10.109",
    "@types/koa": "^2.13.5",
    "@types/koa-bunyan-logger": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "babel-loader": "^9.1.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "bunyan": "^1.8.15",
    "delay": "^5.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "koa": "^2.13.4",
    "koa-bunyan-logger": "^2.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "yargs": "^17.6.2"
  }
}
